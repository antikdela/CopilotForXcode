import SwiftUI

struct UnreadIndicatorView: View {
    // Property to determine if the indicator should be visible
    var isUnread: Bool

    var body: some View {
        Circle()
            // Set the circle's color to blue
            .foregroundStyle(.blue)
            // Add an accessibility label for better accessibility support
            .accessibilityLabel("Unread")
            // Set the circle's opacity based on the isUnread property
            .opacity(isUnread ? 1 : 0)
    }
}